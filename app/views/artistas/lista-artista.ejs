<%- include ../layout/cabecalho.ejs %>

    <div class="container">
        <h2 class="text-center mb-3">Lista de Artistas Cadastrados</h2>

        <table class="table">
            <thead class="table-primary">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Nacionalidade</th>
                    <th scope="col">Data de nascimento</th>
                    <th class="scope center">Ações</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < lista.length; i++) { %>
                    <tr>
                        <th scope="row">
                            <%=i+1%>
                        </th>
                        <td>
                            <%= lista[i].nome %>
                        </td>
                        <td>
                            <%= lista[i].descricao %>
                        </td>
                        <td>
                            <%= lista[i].preco %>
                        </td>
                        <td>
                            <a href="/produto/edita/<%= lista[i].id %>" class="btn btn-outline-primary btn-sm">Editar</a>

                            <form method="post" action="/produtos/remove/<%= lista[i].id %>" class="float-left">
                                <button type="submit" class="btn btn-outline-danger btn-sm" onClick="return confirm('Confirmar a exclusão do artista <%= lista[i].nome %>?')">Excluir</button>

                            </form>
                        </td>
                    </tr>
                    <% } %>
            </tbody>

        </table>
    </div>

    <%- include ../layout/rodape.ejs %>