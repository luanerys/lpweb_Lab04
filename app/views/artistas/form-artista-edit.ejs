<%- include ../layout/cabecalho.ejs %>

<center>
    <h5>Cadastro de Artistas</h5>
    <br />
</center>
<form id="artista-form-edit" class="form-group mx-sm-3 mb-2" action="/artistas" method="POST">
    <div class="form-group">
        <label for="nome_artista">Nome do Artista</label><br />
        <input name="nome_artista" class="form-control" type="text" class="form-control" required
            value="<%=nome_artista%>" />
    </div>

    <div class="form-group">
        <label for="nacionalidade">Nacionalidade</label><br />
        <input name="nacionalidade" class="form-control" type="text" class="form-control" required
            value="<%=nacionalidade%>">
    </div>

    <div class=" form-group">
        <label for="data_nascimento">Data de Nascimento</label><br />
        <input name="data_nascimento" class="form-control" type="date" class="form-control" required
            value="<%=moment(data_nascimento).format('DD/MM/YYYY')%>" />
    </div>

    <div id="footer-buttons" class="text-center">
        <br /><button id="btnCadastro" class="btn btn-primary" type="submit">
            Salvar
        </button>
        <button id="btnLimpar" class="btn btn-primary" type="reset">
            Limpar
        </button>
    </div>
    <input name="id" value="<%=id%>" hidden>
</form>
<%- include ../layout/rodape.ejs %>